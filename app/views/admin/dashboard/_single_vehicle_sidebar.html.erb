<span><a href="#" class="message_head_sidebar" style="text-decoration:none" name="analysis">医废清运综合图表分析</a></span><br><br>
<% Vehicle.find_each do |v| %>
  <span><a href="#" class="message_head_sidebar" style="text-decoration:none" name="<%=v.name%>"><%=v.name%>  [<%=v.driver.name%> | <%=v.vehicletype.name%>]</a></span><br><br>
<% end %>

<script type="text/javascript">
  $(".message_body").hide();
  $("#analysis").slideToggle(400)
  $(".message_head").click(function(){
	$("#"+$(this).attr("name")+"org").slideToggle(400)
	return false;
  });
  $(".message_head_sidebar").click(function(){
	$(".message_body").slideUp(400)
	$("#"+$(this).attr("name")).slideToggle(400)
	return false;
  });
  $(".collapse_all_message").click(function(){
	$(".message_body").slideUp(400)
	return false;
  });
</script>
